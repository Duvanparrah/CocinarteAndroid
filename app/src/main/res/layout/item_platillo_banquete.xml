<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen del platillo (opcional) -->
        <ImageView
            android:id="@+id/imagenPlatillo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_cocinarte"
            android:background="@drawable/borde_dashed"
            android:contentDescription="Imagen del platillo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre del platillo -->
            <TextView
                android:id="@+id/textNombrePlatillo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/negro"
                android:text="Nombre del platillo" />

            <!-- Descripci贸n/preparaci贸n del platillo -->
            <TextView
                android:id="@+id/textDescripcionPlatillo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/gris"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="Descripci贸n de la preparaci贸n del platillo" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>