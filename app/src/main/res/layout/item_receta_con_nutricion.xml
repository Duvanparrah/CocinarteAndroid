<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagen principal de la receta -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/iv_imagen_receta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/temp_plato"
                android:contentDescription="Imagen de la receta" />

            <!-- Overlay con gradiente para el texto -->
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_overlay" />

            <!-- TÃ­tulo superpuesto en la imagen -->
            <TextView
                android:id="@+id/tv_nombre_receta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="8dp"
                android:text="Nombre de la Receta"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

        </FrameLayout>

        <!-- âœ… SECCIÃ“N DE INFORMACIÃ“N NUTRICIONAL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/white">

            <!-- TÃ­tulo de la secciÃ³n nutricional -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valores nutricionales"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/verde"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <!-- Grid de informaciÃ³n nutricional (2x2) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Primera fila: CalorÃ­as y ProteÃ­nas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">

                    <!-- CalorÃ­as -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_nutricion_item"
                        android:padding="4dp"
                        android:layout_marginEnd="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”¥"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_calorias"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 kcal"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginStart="2dp" />

                    </LinearLayout>

                    <!-- ProteÃ­nas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_nutricion_item"
                        android:padding="4dp"
                        android:layout_marginStart="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¥©"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_proteinas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0g P"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginStart="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Segunda fila: Carbohidratos y Grasas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Carbohidratos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_nutricion_item"
                        android:padding="4dp"
                        android:layout_marginEnd="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸž"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_carbohidratos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0g C"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginStart="2dp" />

                    </LinearLayout>

                    <!-- Grasas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_nutricion_item"
                        android:padding="4dp"
                        android:layout_marginStart="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¥‘"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_grasas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0g G"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginStart="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- âœ… INDICADOR DE IA (opcional) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ§  Calculado con IA"
                android:textSize="8sp"
                android:textColor="@color/verde"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:alpha="0.8" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>