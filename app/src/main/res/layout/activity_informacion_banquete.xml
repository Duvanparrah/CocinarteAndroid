<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".InformacionBanquete">

    <!-- Barra Superior -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo Cocinarte -->
        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="161dp"
            android:layout_height="66dp"
            android:contentDescription="@string/logo_description"
            android:src="@drawable/logo_cocinarte"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón del Menú -->
        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/menu"
            android:src="@drawable/star_22"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Título del Banquete -->
    <TextView
        android:id="@+id/banquete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/nombre_banquete"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor para los ítems de Banquetes -->
    <LinearLayout
        android:id="@+id/banquetes_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/banquete_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto descriptivo "Tener en cuenta" -->
    <TextView
        android:id="@+id/descriptive_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TENER EN CUENTA: Este banquete es para personas.\nPuedes aumentar o disminuir la cantidad de invitados y los ingredientes se ajustarán automáticamente."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/banquetes_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Controles para Ajustar Personas -->
    <LinearLayout
        android:id="@+id/personas_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/descriptive_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <!-- Botón Decrementar -->
        <Button
            android:id="@+id/btn_decrement_personas"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:textSize="18sp"
            android:textColor="#000000"
            android:background="@drawable/button_background"
            android:layout_marginEnd="8dp" />


        <!-- Número de Personas -->
        <TextView
            android:id="@+id/num_personas"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:text="6"
            android:textSize="18sp"
            android:gravity="center" />

        <!-- Botón Incrementar -->
        <Button
            android:id="@+id/btn_increment_personas"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:layout_marginEnd="8dp" />

        <!-- Botón Aplicar -->
        <Button
            android:id="@+id/btn_aplicar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Aplicar"
            android:textStyle="bold"
            android:background="@drawable/button_background" />
    </LinearLayout>

    <!-- Tiempo de preparación -->
    <TextView
        android:id="@+id/tiempo_preparacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Tiempo: 0h 0m"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/personas_controls"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Línea separadora debajo de tiempo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tiempo_preparacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dificultad -->
    <TextView
        android:id="@+id/dificultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:text="Dificultad: Media"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tiempo_preparacion"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Línea separadora debajo de dificultad -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dificultad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Categoría -->
    <TextView
        android:id="@+id/categoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:text="Categoría: Italiana"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/dificultad"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Línea separadora debajo de categoría -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/categoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/titulo_ingredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ingredientes"
        android:textSize="20sp"
        android:textColor="@color/verde"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/categoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Espacio para información de ingredientes -->
    <TextView
        android:id="@+id/ingredientes_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/titulo_ingredientes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Línea separadora debajo de Ingredientes -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ingredientes_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título de Preparación Paso a Paso -->
    <TextView
        android:id="@+id/titulo_preparacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Preparación Paso a Paso"
        android:textColor="@color/verde"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ingredientes_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/paso_paso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo_preparacion" />


</androidx.constraintlayout.widget.ConstraintLayout>
