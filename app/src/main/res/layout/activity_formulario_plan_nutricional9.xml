<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:background="@android:color/white">

                <!-- Botón atrás -->
                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/atras"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Volver atrás" />

                <!-- Logo centrado -->
                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/cosinart"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/app_name" />
            </RelativeLayout>

            <!-- Calendario Semanal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Días de la semana -->
                    <LinearLayout
                        android:id="@+id/week_days_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/day_monday"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="L\n13"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:background="@drawable/day_selector_background"
                            android:layout_marginHorizontal="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/day_tuesday"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="M\n14"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:background="@drawable/day_selector_background"
                            android:layout_marginHorizontal="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/day_wednesday"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="M\n15"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:background="@drawable/day_selector_background"
                            android:layout_marginHorizontal="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/day_thursday"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="J\n16"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:background="@drawable/day_selected_background"
                            android:layout_marginHorizontal="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/day_friday"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="V\n17"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:background="@drawable/day_selector_background"
                            android:layout_marginHorizontal="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/day_saturday"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="S\n18"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:background="@drawable/day_selector_background"
                            android:layout_marginHorizontal="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/day_sunday"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="D\n19"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:background="@drawable/day_selector_background"
                            android:layout_marginHorizontal="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                    <!-- Contador de calorías circular -->
                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Círculo de fondo -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="@drawable/circle_background_fallback" />

                        <!-- Círculo de progreso -->
                        <ProgressBar
                            android:id="@+id/calories_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="25"
                            android:progressDrawable="@drawable/circular_progress_fallback" />

                        <!-- Contenido central -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_calories_consumed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="438 kcal"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="#333333" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-------"
                                android:textSize="10sp"
                                android:textColor="#999999" />

                            <TextView
                                android:id="@+id/tv_calories_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1754 Kcal"
                                android:textSize="14sp"
                                android:textColor="#666666" />

                        </LinearLayout>

                    </RelativeLayout>

                    <!-- Indicadores nutricionales -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <!-- Carbohidratos -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/circle_green_indicator"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Carbohidratos"
                                    android:textSize="10sp"
                                    android:textColor="#666666" />

                            </LinearLayout>

                            <ProgressBar
                                android:layout_width="80dp"
                                android:layout_height="6dp"
                                android:layout_marginBottom="4dp"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:progress="80"
                                android:max="100"
                                android:progressDrawable="@drawable/progress_bar_green" />

                            <TextView
                                android:id="@+id/tv_carbohidratos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="63 g"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#333333" />

                        </LinearLayout>

                        <!-- Proteínas -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/circle_blue_indicator"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Proteínas"
                                    android:textSize="10sp"
                                    android:textColor="#666666" />

                            </LinearLayout>

                            <ProgressBar
                                android:layout_width="80dp"
                                android:layout_height="6dp"
                                android:layout_marginBottom="4dp"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:progress="60"
                                android:max="100"
                                android:progressDrawable="@drawable/progress_bar_blue" />

                            <TextView
                                android:id="@+id/tv_proteinas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="38 g"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#333333" />

                        </LinearLayout>

                        <!-- Grasas -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/circle_orange_indicator"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Grasas"
                                    android:textSize="10sp"
                                    android:textColor="#666666" />

                            </LinearLayout>

                            <ProgressBar
                                android:layout_width="80dp"
                                android:layout_height="6dp"
                                android:layout_marginBottom="4dp"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:progress="40"
                                android:max="100"
                                android:progressDrawable="@drawable/progress_bar_orange" />

                            <TextView
                                android:id="@+id/tv_grasas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="16 g"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#333333" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Indicador de agua -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.8 litros por día"
                            android:textSize="12sp"
                            android:textColor="#333333"
                            android:layout_marginEnd="8dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/water_icon"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ✅ CONTENEDOR DINÁMICO: Lista de Comidas Generadas -->
            <LinearLayout
                android:id="@+id/meals_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="32dp">

                <!-- Las comidas se generarán dinámicamente aquí -->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- ✅ SIN BOTONES - Los botones fueron eliminados completamente -->

</androidx.constraintlayout.widget.ConstraintLayout>