<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagen con superposición -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <!-- Imagen de la receta -->
            <ImageView
                android:id="@+id/iVReceta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/banquete_nuevo"
                android:contentDescription="Imagen receta" />

            <!-- Info del usuario -->
            <LinearLayout
                android:id="@+id/lLUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iVPhoto"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/perfil_chef"
                    android:background="@drawable/circle_background" />

                <TextView
                    android:id="@+id/tVNameUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:shadowColor="#AA000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4" />
            </LinearLayout>

            <!-- Título -->
            <TextView
                android:id="@+id/tVTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="Título de la receta"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:background="@drawable/gradient_overlay" />
        </RelativeLayout>

        <!-- ✅ NUEVA SECCIÓN: Tabla nutricional -->
        <LinearLayout
            android:id="@+id/nutrition_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Por porción"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/nutrition_kcl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:text="0 kcal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/nutrition_p"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:text="0 P" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/nutrition_c"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:text="0 C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/nutrition_gt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:text="0 GT" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botones de interacción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <!-- Like -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon_like"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart_outline"
                    android:background="@android:color/transparent"
                    android:contentDescription="Me gusta" />

                <TextView
                    android:id="@+id/text_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Comentario -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="24dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon_comentario"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/chat"
                    android:background="@android:color/transparent"
                    android:contentDescription="Comentarios" />

                <TextView
                    android:id="@+id/text_coments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Compartir -->
            <ImageView
                android:id="@+id/icon_compartir"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/compartir"
                android:background="@android:color/transparent"
                android:contentDescription="Compartir" />

            <!-- Espaciador -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Guardar -->
            <ImageView
                android:id="@+id/icon_guardar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bookmark_outline"
                android:background="@android:color/transparent"
                android:contentDescription="Guardar" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>