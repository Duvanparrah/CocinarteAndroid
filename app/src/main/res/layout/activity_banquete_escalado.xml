<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5"
    tools:context=".ui.banquetes.BanqueteEscaladoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ✅ TOOLBAR PERSONALIZADO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageButton
                android:id="@+id/btn_volver"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Volver"
                app:tint="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🤖 Escalado Inteligente"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginEnd="40dp" />

        </LinearLayout>

        <!-- ✅ INFORMACIÓN DEL BANQUETE ORIGINAL -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📋 Banquete Original"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <!-- Imagen del banquete -->
                <ImageView
                    android:id="@+id/imagen_banquete"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_corner_background"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="Imagen del banquete" />

                <!-- Nombre del banquete -->
                <TextView
                    android:id="@+id/text_nombre_banquete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Banquete"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <!-- Descripción -->
                <TextView
                    android:id="@+id/text_descripcion_original"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción del banquete original..."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:maxLines="3"
                    android:ellipsize="end" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- ✅ CONFIGURACIÓN DE ESCALADO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:baselineAligned="false">

            <!-- Personas originales -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_personas_originales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👥 Original"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/text_personas_originales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="personas"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Personas nuevas -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_personas_nuevas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎯 Objetivo"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/edit_personas_nuevas"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="number"
                        android:hint="20"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:background="@drawable/edit_text_background"
                        android:maxLength="4"
                        android:importantForAutofill="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="personas"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- ✅ BOTONES DE ACCIÓN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_reiniciar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="🔄 Reiniciar"
                android:textColor="#666666"
                android:background="@drawable/button_secondary_background"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_escalar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:layout_marginStart="8dp"
                android:text="🤖 Escalar con IA"
                android:textColor="@android:color/white"
                android:background="@drawable/button_primary_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:enabled="false" />

        </LinearLayout>

        <!-- ✅ PROGRESS BAR -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- ✅ RESULTADO DEL ESCALADO -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeColor="#4CAF50"
            app:strokeWidth="2dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Escalado Completado"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="16dp"
                    android:gravity="center" />

                <!-- Factor de escala -->
                <TextView
                    android:id="@+id/text_factor_escala"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Factor de escala: 2.5x (8 → 20 personas)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_corner_light_background"
                    android:padding="12dp"
                    android:gravity="center" />

                <!-- Recomendaciones de IA -->
                <TextView
                    android:id="@+id/text_recomendaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🤖 Recomendaciones de IA:\n\n• Aumenta el tiempo de cocción en 30-45%\n• Las especias fueron ajustadas inteligentemente\n• Usa recipientes más grandes apropiados"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_corner_light_background"
                    android:padding="12dp"
                    android:lineSpacingExtra="4dp" />

                <!-- Título ingredientes escalados -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🥕 Ingredientes Escalados"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <!-- RecyclerView de ingredientes escalados -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_ingredientes_escalados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="16dp" />

                <!-- Preparación ajustada -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📝 Preparación Ajustada"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/text_preparacion_ajustada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preparación para 20 personas\n\n🤖 AJUSTES INTELIGENTES DE IA PARA 20 PERSONAS:\n• Aumenta el tiempo de cocción en 30-45%\n• Usa recipientes más grandes apropiados\n• Las especias fueron ajustadas inteligentemente"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:background="@drawable/rounded_corner_light_background"
                    android:padding="12dp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>